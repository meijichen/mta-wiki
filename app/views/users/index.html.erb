<div class="container">
  <p id="notice"><%= notice %></p>
  <h2>Users</h2>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.password %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_user_path(user) if correct_user? %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } if correct_user?%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<p class ='new'><%= link_to 'New User', new_user_path %></p>
</div>
