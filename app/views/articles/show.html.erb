<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= markdown(@article.title)%>
</p>

<p>
  <strong>Content:</strong>
  <%= markdown(@article.content) %>
</p>

<p>
  <strong>Category:</strong>
  <%= @article.category.name%>
  </p>
</p>

<p>
  <strong>Published:</strong>
  <%= @article.created_at.strftime("%d %b. %Y %H:%M:%S")%>
</p>

<p>
  <strong>Created by:</strong>
  <a href="/users/<%= @article.user %>"><%= @article.user.name %></a>
</p>

<p>
  <strong>Last Updated:</strong>
  <%= @article.updated_at.strftime("%d %b. %Y %H:%M:%S") %>
</p>


<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'Back', articles_path %>

<footer>
  <div class = 'footer'>
    <a class="new" href="/categories/new">Create a category</a>
    <a class="new" href="/articles/new">Create an article</a>
  </div>
</footer>
