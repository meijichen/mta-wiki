<div class='container'>

  <div>
    <% @categories.each do |category| %>
      <div class='category'>
        <div class = 'name'><%= link_to category.name, category %></div>
        <div class='edit'>published: <%=category.created_at.strftime("%d %b. %Y")%></div>
        <div class='edit'>updated: <%=category.updated_at.strftime("%d %b. %Y") %></p></div>
        <div class = 'edit'><%= link_to 'Edit', edit_category_path(category) %></div>
        <div class = 'edit'><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
    <% end %>
  </div>
<p id="notice"><%= notice %></p>
</div>
<br>

<footer>
  <div class = 'footer'>
    <a class="new" href="/categories/new">Create a category</a>
    <a class="new" href="/articles/new">Create an article</a>
    <a class="new" href="/articles">All articles</a>
  </div>
</footer>
